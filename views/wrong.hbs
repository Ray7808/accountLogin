<form class="container-fluid mt-5 d-flex flex-column align-items-center" action="/login" method="POST">
    <h3>Please input correct Email and password</h3>
    <h1>Account Login</h1>
    <div class="mb-3">
        <input type="email" class="form-control" id="InputEmail1" name="InputEmail" placeholder="Email" aria-describedby="emailHelp" />
    </div>
    <div class="mb-3">
        <input type="password" class="form-control" id="InputPassword" name="InputPassword" placeholder="Password" />
    </div>

    <button type="submit" class="btn btn-primary">Sign in</button>
</form>